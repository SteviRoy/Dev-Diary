{{> header}}

<main>
  <div class="post">
    <h2>{{post.title}}</h2>
    <p>By {{post.User.username}} on {{post.createdAt}}</p>
    <p>{{post.content}}</p>
  </div>
  
  <h3>Comments</h3>
  {{#each post.Comments}}
    <div>
      <p>{{comment_text}} - {{User.username}} on {{createdAt}}</p>
    </div>
  {{/each}}
  
  {{#if loggedIn}}
    <form class="comment-form">
      <label for="comment-text">Add a comment:</label>
      <textarea id="comment-text" rows="3"></textarea>
      <button type="submit">Submit</button>
    </form>
  {{/if}}
</main>

{{> footer}}
